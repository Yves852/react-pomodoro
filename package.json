{
  "name": "react-pomodoro",
  "version": "1.0.2",
  "description": "",
  "source": "src/index.html",
  "scripts": {
    "start": "parcel ./src/index.html --open",
    "build": "npm-run-all build:css build:parcel",
    "build:css": "sass ./src/style.scss ./src/style.css",
    "build:parcel": "parcel build ./src/index.html",
    "prebuild": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yves852/react-pomodoro.git"
  },
  "author": "Yves Thirion",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Yves852/react-pomodoro/issues"
  },
  "homepage": "https://github.com/Yves852/react-pomodoro#readme",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-modal": "^3.14.3",
    "sweetalert2": "^11.1.9",
    "use-interval": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@becode/eslint-config": "^0.12.1",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-unicorn": "^37.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^11.2.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0",
    "prettier": "^2.4.1",
    "sass": "^1.43.2"
  },
  "targets": {
    "default": {
      "includeNodeModules": true
    }
  },
  "engines": {
    "node": "16"
  },
  "lint-staged": {
    "*.json": [
      "npx prettier --write"
    ],
    "*.js": [
      "npx eslint --fix --cache"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
